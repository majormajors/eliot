
<div class="clearfix">
   <%= f.label :name, t("activerecord.attributes.server.name", :default => "Name"), :class => :label %>
  <div class="input">
    <%= f.text_field :name, :class => 'text_field' %>
  </div>
</div>

<div class="clearfix">
   <%= f.label :base_url, t("activerecord.attributes.server.base_url", :default => "Base url"), :class => :label %>
  <div class="input">
    <%= f.text_field :base_url, :class => 'text_field' %>
  </div>
</div>
<div class="form-actions">
  <button class="btn primary" type="submit">Save</button> or
	<%= link_to "Cancel", servers_path %>
</div>

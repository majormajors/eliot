<label class="label"><%= t("activerecord.attributes.server.name", :default => t("activerecord.labels.name", :default => "Name")) %>:</label>
<p><%= @server.name %></p>

<label class="label"><%= t("activerecord.attributes.server.base_url", :default => t("activerecord.labels.base_url", :default => "Base url")) %>:</label>
<p><%= @server.base_url %></p>

<label class="label"><%= t("activerecord.attributes.server.version", :default => "Version") %>:</label>
<p><%= @server.version %></p>

<label class="label"><%= t("activerecord.attributes.server.reports", :default => "Reports") %>:</label>
<p>
<ul>
<% @server.reports.each do |report| -%>
<li><%= link_to report, server_report_path(@server, report) %></li>
<% end -%>
</ul>
<%= form_for Report.new do |f| -%>
<%= f.text_field :name, :placeholder => t("activerecord.attributes.report.name", :default => "Report Name") %>
<%= f.submit %>
<% end -%>
</p>

<div class="form-actions">
<%= link_to "Back", servers_path, :class => 'btn'  %>
<%= link_to "Edit", edit_server_path(@server), :class => 'btn' %>
<%= link_to "Delete", server_path(@server), :method => "delete", :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}", :class => 'btn' %>
</div>
